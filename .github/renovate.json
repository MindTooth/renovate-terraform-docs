{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    ":label(dependencies)",
    ":timezone(Europe/Berlin)",
    ":disableRateLimiting"
  ],

  "enabledManagers": ["dockerfile"],

  "packageRules": [
    {
      "matchPackageNames": ["renovate/renovate"],
      "extends": ["schedule:automergeDaily"]
    }
  ]
}
